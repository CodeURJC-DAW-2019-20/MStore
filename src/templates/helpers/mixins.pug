mixin star-rating-short(number)
  .star-rating
    span.sr-label.mr-1= number
    i(data-feather='star').sr-star.active

//- Components Menu
mixin components-menu(items, isActive)
  nav.list-group
    each item in items
      - var activeClass = (isActive === item.title) ? 'active' : ''
      - var linkAttrs = {'href': item.link, 'class': ['list-group-item', 'list-group-item-action', 'border-top-0', 'border-right-0', 'border-bottom-0 py-2', activeClass]}
      a()&attributes(linkAttrs)
        i(class='text-muted' data-feather='chevron-right' style='width: .875rem; height: .875rem; margin-top: -.1rem; margin-right: .25rem;')
        span= item.title
