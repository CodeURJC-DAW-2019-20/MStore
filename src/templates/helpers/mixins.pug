//- Image
mixin image(link, alt)
  - var imgAttrs = isNestedFile ? {'src': '../' + link, 'alt': alt} : {'src': link, 'alt': alt}
  img(width!=attributes.width height!=attributes.height class!=attributes.class)&attributes(imgAttrs)

//- Star rating
mixin star-rating(number)
  .star-rating
    case number
      when 0
        - break
      when 1
        i(data-feather='star').sr-star.active
        i(data-feather='star').sr-star
        i(data-feather='star').sr-star
        i(data-feather='star').sr-star
        i(data-feather='star').sr-star
        - break
      when 2
        i(data-feather='star').sr-star.active
        i(data-feather='star').sr-star.active
