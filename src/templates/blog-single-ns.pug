extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Post no sidebar'
  - var parentMenu = 'Blog'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Blog', 'link': '#'}]

//- Page Content
block content
  .container.pb-5.mb-1
    .row.justify-content-center

      .col-lg-9

        // Post meta
        .post-meta.d-flex.flex-wrap.justify-content-between.pb-3
          div.mr-2
            | by&nbsp;
            a(href='#') Olivia Reyes
            span.meta-divider
            | in&nbsp;
            a(href='#') Aerial photo
            span.meta-divider
            span Apr 20
          a(href='#')
            i(data-feather='message-square').mr-1
            | 13

        // Gallery
        .row.pb-2
          .col-sm-8
            a(href='img/blog/single/01.jpg' data-fancybox='blogGallery' data-options='{"caption": "Operating a drone"}').gallery-item.mb-grid-gutter
              img(src='img/blog/single/th01.jpg' alt='Gallery image')
              .gallery-caption
                .gallery-indicator
                  i(data-feather='zoom-in').gallery-indicator-icon
                | Operating a drone
          .col-sm-4
            a(href='img/blog/single/02.jpg' data-fancybox='blogGallery' data-options='{"caption": "Drone shot #1"}').gallery-item.mb-grid-gutter
              img(src='img/blog/single/th02.jpg' alt='Gallery image')
              .gallery-caption
                .gallery-indicator
                  i(data-feather='zoom-in').gallery-indicator-icon
                | Drone shot #1
            a(href='img/blog/single/03.jpg' data-fancybox='blogGallery' data-options='{"caption": "Drone shot #2"}').gallery-item.mb-grid-gutter
              img(src='img/blog/single/th03.jpg' alt='Gallery image')
