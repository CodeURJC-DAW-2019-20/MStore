  - var pageTitle = 'Samsung Gear 360 Real 360° 4K VR Camera'
  - var parentMenu = 'Shop'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Electronics', 'link': '#'}, {'title': 'Action cameras', 'link': '#'}]
  - var navbarTemplate = 'navbar-multilevel'
