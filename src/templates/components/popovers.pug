extends ../partials/layout-components

//- Override default config variables
append config
  - var pageTitle = 'Popovers'
  - var pageSubTitle = '&mdash;&nbsp; A pop-up box that appears when the user clicks/hovers on an element. <a href="https://getbootstrap.com/docs/4.3/components/popovers/" target="_blank">See Bootstrap documentation</a>.'
  - var isNestedFile = true
  - var isCodeHighlighting = true
  - var breadcrumbs = [{'title': 'Home', 'link': '../index.html'}, {'title': 'Components', 'link': '#'}]

//- Page Content
