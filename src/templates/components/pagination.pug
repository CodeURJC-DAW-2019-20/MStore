extends ../partials/layout-components

//- Override default config variables
append config
  - var pageTitle = 'Pagination'
  - var pageSubTitle = '&mdash;&nbsp; Indicate a series of related content exists across multiple pages. <a href="https://getbootstrap.com/docs/4.3/components/pagination/" target="_blank">See Bootstrap documentation</a>.'
  - var isNestedFile = true
  - var isCodeHighlighting = true
  - var breadcrumbs = [{'title': 'Home', 'link': '../index.html'}, {'title': 'Components', 'link': '#'}]

//- Page Content
